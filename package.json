{
  "name": "yzc-note",
  "displayName": "YZC Note",
  "description": "A markdown note-taking extension with file explorer sidebar",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yzc-note.setRootFolder",
        "title": "Set Root Folder",
        "category": "YZC Note",
        "icon": "$(folder-opened)"
      },
      {
        "command": "yzc-note.openMarkdown",
        "title": "Open Markdown",
        "category": "YZC Note",
        "icon": "$(markdown)"
      },
      {
        "command": "yzc-note.refresh",
        "title": "Refresh",
        "category": "YZC Note",
        "icon": "$(refresh)"
      },
      {
        "command": "yzc-note.newNote",
        "title": "New Note",
        "category": "YZC Note",
        "icon": "$(add)"
      },
      {
        "command": "yzc-note.newFolder",
        "title": "New Folder",
        "category": "YZC Note",
        "icon": "$(new-folder)"
      },
      {
        "command": "yzc-note.renameItem",
        "title": "Rename",
        "category": "YZC Note",
        "icon": "$(edit)"
      },
      {
        "command": "yzc-note.deleteItem",
        "title": "Delete",
        "category": "YZC Note",
        "icon": "$(trash)"
      },
      {
        "command": "yzc-note.newSubfolder",
        "title": "New Subfolder",
        "category": "YZC Note",
        "icon": "$(new-folder)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "yzc-note-explorer",
          "title": "YZC Note",
          "icon": "$(note)"
        }
      ]
    },
    "views": {
      "yzc-note-explorer": [
        {
          "id": "yzc-note.explorer",
          "name": "Notes",
          "contextualTitle": "YZC Note",
          "icon": "$(note)",
          "canDropMimeTypes": ["application/vnd.code.tree.yzc-note"],
          "dragAndDropController": true
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "yzc-note.explorer",
        "contents": "[New Note](command:yzc-note.newNote) [New Folder](command:yzc-note.newFolder)\n\n[Set Root Folder](command:yzc-note.setRootFolder)",
        "when": "!yzc-note:hasRootFolder"
      },
      {
        "view": "yzc-note.explorer",
        "contents": "[New Note](command:yzc-note.newNote) [New Folder](command:yzc-note.newFolder)",
        "when": "yzc-note:hasRootFolder"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "yzc-note.newNote",
          "when": "view == yzc-note.explorer",
          "group": "navigation"
        },
        {
          "command": "yzc-note.newFolder",
          "when": "view == yzc-note.explorer",
          "group": "navigation"
        },
        {
          "command": "yzc-note.refresh",
          "when": "view == yzc-note.explorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "yzc-note.newSubfolder",
          "when": "view == yzc-note.explorer && viewItem == 'folder' || viewItem == 'folderWithContextMenu'",
          "group": "1_modification",
          "title": "New Subfolder"
        },
        {
          "command": "yzc-note.renameItem",
          "when": "view == yzc-note.explorer && viewItem == 'file' || viewItem == 'folder' || viewItem == 'folderWithContextMenu'",
          "group": "2_modification"
        },
        {
          "command": "yzc-note.deleteItem",
          "when": "view == yzc-note.explorer && viewItem == 'file' || viewItem == 'folder' || viewItem == 'folderWithContextMenu'",
          "group": "2_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@milkdown/core": "^6.0.0",
    "@milkdown/preset-commonmark": "^6.0.0",
    "@milkdown/theme-nord": "^6.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
