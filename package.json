{
  "name": "yzc-note",
  "displayName": "YZC Note",
  "description": "A markdown note-taking extension with file explorer sidebar",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yzc-note.setRootFolder",
        "title": "Set Root Folder",
        "category": "YZC Note"
      },
      {
        "command": "yzc-note.openMarkdown",
        "title": "Open Markdown",
        "category": "YZC Note"
      },
      {
        "command": "yzc-note.refresh",
        "title": "Refresh",
        "category": "YZC Note",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "yzc-note-explorer",
          "title": "YZC Note",
          "icon": "$(note)"
        }
      ]
    },
    "views": {
      "yzc-note-explorer": [
        {
          "id": "yzc-note.explorer",
          "name": "Notes",
          "contextualTitle": "YZC Note"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "yzc-note.explorer",
        "contents": "No folder opened. [Set Root Folder](command:yzc-note.setRootFolder)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@milkdown/core": "^6.0.0",
    "@milkdown/preset-commonmark": "^6.0.0",
    "@milkdown/theme-nord": "^6.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
